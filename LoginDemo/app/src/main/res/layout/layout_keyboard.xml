<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/keyboard_width"
    android:layout_height="@dimen/keyboard_height"
   android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="@dimen/keyboard_item_full_size">

        <TextView
            android:id="@+id/tv_key_1"
            style="@style/style_keyboard_text"
            android:text="1" />

        <TextView
            android:id="@+id/tv_key_2"
            style="@style/style_keyboard_text"
            android:text="2" />

        <TextView
            android:id="@+id/tv_key_3"
            style="@style/style_keyboard_text"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="@dimen/keyboard_item_full_size">

        <TextView
            android:id="@+id/tv_key_4"
            style="@style/style_keyboard_text"
            android:text="4" />

        <TextView
            android:id="@+id/tv_key_5"
            style="@style/style_keyboard_text"
            android:text="5" />

        <TextView
            android:id="@+id/tv_key_6"
            style="@style/style_keyboard_text"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="@dimen/keyboard_item_full_size">

        <TextView
            android:id="@+id/tv_key_7"
            style="@style/style_keyboard_text"
            android:text="7" />

        <TextView
            android:id="@+id/tv_key_8"
            style="@style/style_keyboard_text"
            android:text="8" />

        <TextView
            android:id="@+id/tv_key_9"
            style="@style/style_keyboard_text"
            android:text="9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="@dimen/keyboard_item_full_size">

        <TextView
            style="@style/style_keyboard_text"
            android:background="@color/transparent"
            android:clickable="false" />

        <TextView
            android:id="@+id/tv_key_0"
            style="@style/style_keyboard_text"
            android:text="0" />

        <ImageView
            android:id="@+id/iv_delete"
            style="@style/style_keyboard_text"
            android:src="@drawable/icon_key_delete" />
    </LinearLayout>

</LinearLayout>
